<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loadingBar"
        android:layout_width="60sp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_main"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoutButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="right"
                android:layout_margin="20sp"
                android:clickable="true"
                android:background="@drawable/logout_icon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/default_pic1" />
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_main"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_slab_bold"
                android:layout_gravity="center"
                android:text="Lisa"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/premiumSymbol"
                android:layout_width="40sp"
                android:layout_height="30sp"
                android:background="@drawable/premium_symbol"
                android:visibility="visible"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_main"
            android:gravity="center">

            <TextView
                android:id="@+id/addedRecipesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_slab"
                android:layout_gravity="center"
                android:text="15 Added Recipes"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/editProfileButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="right"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:clickable="true"
                android:background="@drawable/edit_icon"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/half_main_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/dark_grey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"
                android:layout_marginBottom="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/userBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:text="Insert Bio Here"
            android:fontFamily="@font/josefin_slab"
            android:gravity="center"
            android:layout_marginTop="30sp"/>

    </LinearLayout>

</LinearLayout>