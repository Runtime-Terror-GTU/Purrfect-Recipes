<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Moderator.ModeratorActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationBarModerator"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_moderator" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBarModerator"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="@color/status_bar_secondary"
        app:elevation="0dp"
        app:itemRippleColor="@color/white"
        app:itemTextAppearanceActive="@style/JosefinSlabTextViewStyleB"
        app:itemTextAppearanceInactive="@style/JosefinSlabTextViewStyle"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigation_bar_moderator"/>

</RelativeLayout>