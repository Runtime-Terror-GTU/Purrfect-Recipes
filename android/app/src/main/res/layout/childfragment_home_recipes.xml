<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        android:layout_margin="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe of The Day"
            android:fontFamily="@font/josefin_slab_bold"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8sp"
            android:background="@drawable/main_bg">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130sp"
                    android:layout_height="120sp"
                    android:src="@drawable/cinnamon_roll"
                    android:scaleType="centerCrop"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/purrfectButton"
                    android:layout_width="40dp"
                    android:layout_height="39dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="100sp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/purrfect" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7sp"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cinnamon Roll Cupcake"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Purrfect Recipes"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/josefin_slab"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:text="Easy"
                        android:layout_margin="2sp"
                        android:background="@color/main"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/josefin_slab" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="2sp"
                        android:text="Savoury"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:background="@color/main"
                        android:textColor="@color/white"
                        android:fontFamily="@font/josefin_slab" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:fontFamily="@font/josefin_slab"
            android:textSize="13sp"
            android:layout_marginTop="2sp"
            android:textColor="@color/black"
            android:layout_marginLeft="132sp"
            android:layout_marginBottom="5sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/dark_grey"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/main_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="25sp"
                android:layout_weight="1.7"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:background="@drawable/search_icon"/>

            <EditText
                android:layout_width="0sp"
                android:layout_weight="10"
                android:layout_height="40sp"
                android:fontFamily="@font/josefin_slab_italic"
                android:hint="Search"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="3sp"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/cancelSearchButton"
                android:layout_width="0sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:layout_marginRight="5sp"
                android:background="@drawable/cancel_icon" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/searchStyle"
            android:layout_width="0sp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/byName"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:text="Name"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="-13.4sp"/>

            <RadioButton
                android:id="@+id/byUsername"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:layout_gravity="left|center"
                android:text="Username"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="-13sp"/>

        </RadioGroup>

        <Button
            android:id="@+id/searchDoneButton"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.25"
            android:padding="0sp"
            android:elevation="0sp"
            app:cornerRadius="0sp"
            android:text="Done"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/josefin_slab_bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="2sp"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesGridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3sp"
        android:layout_marginLeft="10sp" />

</LinearLayout>