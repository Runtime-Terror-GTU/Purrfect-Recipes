<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/enterancebg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".StartActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="262sp"
                android:layout_height="140sp"
                android:background="@drawable/pati_edited1" />

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_marginTop="135sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/logo_nobg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85sp"
                android:text="Purrfect\nRecipes"
                android:textSize="50sp"
                android:textColor="@color/dark_main"
                android:fontFamily="@font/leckerli_one"
                android:gravity="center"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="5sp"
            android:id="@+id/login_screen"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/white_bg"
            android:layout_marginBottom="40sp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/josefin_slab_bold"
                android:gravity="center"
                android:text="Log In"
                android:textColor="@color/main"
                android:textSize="27sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Username"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/enterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"
                android:clickable="true"
                android:onClick="onEnter"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/dark_grey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"/>

            <LinearLayout
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"
                android:clickable="true"
                android:onClick="onRegisterSwitch"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/guestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="11sp"
                android:clickable="true"
                android:onClick="onContinueGuest"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue as Guest"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="40sp"
            android:id="@+id/register_screen"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/white_bg"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/josefin_slab"
                android:gravity="center"
                android:text="Register"
                android:textColor="@color/main"
                android:textSize="27sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_layoutR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredUsernameR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Enter Username"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_layoutR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredEmailR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Enter Email"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_layoutR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredPasswordR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_layoutR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                app:boxStrokeColor="@color/dark_grey"
                app:hintTextColor="@color/main"
                android:textColorHint="@color/main"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/enteredPasswordR2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_slab"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:padding="8sp"
                    android:textColor="@color/main"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/enterButtonR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"
                android:clickable="true"
                android:onClick="onEnter"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/dark_grey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"/>

            <LinearLayout
                android:id="@+id/loginButtonR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6sp"
                android:clickable="true"
                android:onClick="onLoginSwitch"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/guestButtonR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="11sp"
                android:clickable="true"
                android:onClick="onContinueGuest"
                android:background="@drawable/button_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue as Guest"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textStyle="bold"
                    android:textColor="@color/light_main"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>