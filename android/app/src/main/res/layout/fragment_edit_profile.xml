<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:id="@+id/topFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="29dp"
            android:layout_height="30sp"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/cancel_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:gravity="center"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/enterSortButton"
        android:layout_below="@id/topFrame"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_bg"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/userProfilePic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_pic1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_slab_bold"
            android:text="Change Profile Picture"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/josefin_slab"
            android:text="Username"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/josefin_slab"
            android:text="Username"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_slab"
            android:text="Profile Bio"
            android:layout_marginLeft="15sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_slab"
            android:hint="Insert Here A Profile Introduction Text"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@color/dark_grey">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_slab_bold"
            android:text="Change Password"
            android:textAlignment="textStart"
            android:layout_marginLeft="15sp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_slab"
            android:text="Enter New Password Twice"
            android:layout_marginLeft="15sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_slab"
            android:layout_marginLeft="15sp"
            android:hint="*******"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:layout_marginRight="15sp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_slab"
            android:hint="*******"
            android:layout_marginLeft="15sp"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:layout_marginRight="15sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/enterSortButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/button_bg2"
        android:clickable="true">

        <TextView
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>