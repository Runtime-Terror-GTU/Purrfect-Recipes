<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:orientation="vertical"
    android:layout_marginLeft="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5sp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/commentOwnerPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/default_pic1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:gravity="left">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lisa"
                    android:fontFamily="@font/josefin_slab_bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/premiumSymbol"
                    android:layout_width="27sp"
                    android:layout_height="20sp"
                    android:background="@drawable/premium_symbol"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="15sp"
            android:layout_gravity="bottom"
            android:background="@drawable/main_bg">

            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="19sp"
                android:fontFamily="@font/josefin_slab"
                android:textColor="@color/black"
                android:layout_margin="8sp"/>

            <ImageView
                android:id="@+id/deleteCommentButton"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginRight="8sp"
                android:src="@drawable/trash_box"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="5sp"
        android:background="@color/dark_grey" />

</LinearLayout>