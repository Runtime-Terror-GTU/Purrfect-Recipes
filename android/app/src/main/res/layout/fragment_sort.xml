<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topFrame">

        <ImageView
            android:id="@+id/cancelSort"
            android:layout_width="29dp"
            android:layout_height="30sp"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/cancel_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:gravity="center"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/enterSortButton"
        android:layout_below="@id/topFrame"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:text="By Difficulty"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@color/dark_grey" />

        <RadioGroup
            android:id="@+id/sortMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="20sp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/diffHardest"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="15sp"
                android:checked="false"
                android:fontFamily="@font/josefin_slab"
                android:text="Hardest to Easiest"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/diffEasiest"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="15sp"
                android:checked="false"
                android:fontFamily="@font/josefin_slab"
                android:text="Easiest to Hardest"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/josefin_slab_bold"
                android:text="By Popularity"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@color/dark_grey" />

            <RadioButton
                android:id="@+id/popLeast"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="5sp"
                android:checked="false"
                android:fontFamily="@font/josefin_slab"
                android:text="Least Purrfected to Most Purrfected"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/popMost"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="3sp"
                android:checked="false"
                android:fontFamily="@font/josefin_slab"
                android:text="Most Purrfected to Least Purrfected"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enterSortButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/button_bg2"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>