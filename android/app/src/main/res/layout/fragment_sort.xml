<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cancelSort"
            android:layout_width="29dp"
            android:layout_height="30sp"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/cancel_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/josefin_slab_bold"
            android:gravity="center"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/main_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Difficulty"
            android:fontFamily="@font/josefin_slab_bold"
            android:textSize="23sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/dark_grey"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"/>

        <RadioGroup
            android:id="@+id/sortMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/diffHardest"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Hardest to Easiest"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/diffEasiest"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="15sp"
                android:layout_gravity="left|center"
                android:text="Easiest to Hardest"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Popularity"
            android:fontFamily="@font/josefin_slab_bold"
            android:textSize="23sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/dark_grey"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"/>

            <RadioButton
                android:id="@+id/popLeast"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Least Purrfected to Most Purrfected"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/popMost"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="15sp"
                android:layout_gravity="left|center"
                android:text="Most Purrfected to Least Purrfected"
                android:fontFamily="@font/josefin_slab"
                android:checked="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/enterSortButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:clickable="true"
            android:background="@drawable/button_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter"
                android:layout_margin="5sp"
                android:textSize="22sp"
                android:fontFamily="@font/josefin_slab_bold"
                android:textStyle="bold"
                android:textColor="@color/light_main"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>