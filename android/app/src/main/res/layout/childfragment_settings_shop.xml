<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/josefin_slab_bold"
        android:layout_marginTop="20sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:text=" Premium"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/josefin_slab_bold"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:gravity="left"
        android:text="Premium Features"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:fontFamily="@font/josefin_slab"
        android:gravity="center|left"
        android:text="- Add any photo you want as profile picture
        \n- Your comments will show on top
        \n- There will be a sign next to your name
        \n- No ads on app
        \n- Suggest ingredients to add"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:fontFamily="@font/josefin_slab"
        android:gravity="center|left"
        android:text="\n\nTo get premium at least likes of one your added recipe must be 100.\n\n"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/mostLikeNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:fontFamily="@font/josefin_slab"
        android:gravity="center|left"
        android:text="Your most get liked recipe likes is: 0"
        android:textColor="@color/black"
        android:textSize="17sp" />



    <LinearLayout
        android:id="@+id/notVerifiedUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="15sp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First you have be verified user."
            android:layout_margin="5sp"
            android:textSize="22sp"
            android:fontFamily="@font/josefin_slab"
            android:textColor="@color/black"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/beVerifiedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="15sp"
            android:clickable="true"
            android:background="@drawable/button_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Verified"
                android:layout_margin="5sp"
                android:textSize="22sp"
                android:fontFamily="@font/josefin_slab_bold"
                android:textStyle="bold"
                android:textColor="@color/light_main"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PremiumUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="15sp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are already premium user."
            android:layout_margin="5sp"
            android:textSize="22sp"
            android:fontFamily="@font/josefin_slab"
            android:textColor="@color/black"
            android:gravity="center"/>


    </LinearLayout>


</LinearLayout>